$(document).ready(function(){$(window).load(function(){$("#preloader").fadeOut(),$(".loading").delay(350).fadeOut("slow"),$("body").delay(350).css({overflow:"visible"})}),$(window).bind("scroll",function(){var e=$(window).height();$(window).scrollTop()>e?$("#home").addClass("fixed"):$("#home").removeClass("fixed")}),(new WOW).init(),$(window).scroll(function(){$(window).scrollTop()>1e3?$("a.top").fadeIn("slow"):$("a.top").fadeOut("slow")}),$("#slides").superslides({animation:"fade",play:7e3,animation_speed:800}),$("#datetimepicker").datetimepicker({format:"m.d.Y H:i",inline:!1,lang:"en"}),$("ul.galleryImg li a").append("<div></div>"),$("nav a[href^=#], a.top[href^=#], a.read[href^=#]").click(function(e){e.preventDefault(),$("html,body").animate({scrollTop:$(this.hash).offset().top},1e3)}),$(".para1").parallax("50%",.3),$(".para2").parallax("50%",.3),$(".para3").parallax("50%",.3),$("#serviceList").carousel({interval:!1}),$("a[rel^='prettyPhoto']").prettyPhoto({overlay_gallery:!0}),$("#subscribeForm input").focus(function(){$(this).prev("label").hide(),$(this).prev().prev("label").hide()}),$("#subscribeForm").submit(function(){var e=$("#emailSubscribe").val();if(""==e)return $("#emailSubscribe").addClass("reqfld"),$('<span class="error" style="display:none; color:#cc0000"><i class="fa fa-exclamation-circle"></i></span>').insertBefore("#emailSubscribe").fadeIn(400),$("#emailSubscribe").focus(function(){$("#emailSubscribe").removeClass("reqfld"),$(this).prev().fadeOut(400)}),!1;if(-1==e.indexOf("@")||-1==e.indexOf("."))return $("#emailSubscribe").addClass("reqfld"),$('<span class="error" style="display:none;  color:#cc0000">Invalid!</span>').insertBefore("#emailSubscribe").fadeIn(400),$("#emailSubscribe").focus(function(){$("#emailSubscribe").removeClass("reqfld"),$(this).prev().fadeOut(400)}),!1;var s=$("#sub-security").val(),a="&emailSubscribe="+e+"&sub-security="+s;return $.ajax({type:"POST",url:"form/subscribe.php",data:a,success:function(){$("#subscribeForm .form-row").hide(),$("#subscribeForm").append("<div id='subscribesuccess' class='alert alert-success' style='border:#"+sub_successBox_Border_Color+" 1px "+sub_successBoxBorderStyle+"; background:#"+sub_successBoxColor+";' ></div>"),$("#subscribesuccess").html("<h5 style='color:#"+sub_textColor+";'><i class='fa fa-check-circle'></i> "+sub_submitMessage+"</h5>").hide().delay(300).fadeIn(1500),$("#subscribeForm .form-row").delay(6e3).slideUp("fast")}}),!1}),$(".loader").hide(),$("input, textarea").focus(function(){$(this).prev("label").hide(),$(this).prev().prev("label").hide()}),$("#contact_form").submit(function(){var e=$("#name").val();if(""==e)return $("#name").addClass("reqfld"),$('<span class="error" style="display:none; margin-top:0px;">Required!</span>').insertBefore("#name").fadeIn(400),$("#name").focus(function(){$("#name").removeClass("reqfld"),$(this).prev().fadeOut(400)}),!1;var s=$("#phone").val();if(""==s)return $("#phone").addClass("reqfld"),$('<span class="error" style="display:none;">Required!</span>').insertBefore("#phone").fadeIn(400),$("#phone").focus(function(){$("#phone").removeClass("reqfld"),$(this).prev().fadeOut(400)}),!1;var a=$("#email").val();if(""==a)return $("#email").addClass("reqfld"),$('<span class="error" style="display:none;">Required!</span>').insertBefore("#email").fadeIn(400),$("#email").focus(function(){$("#email").removeClass("reqfld"),$(this).prev().fadeOut(400)}),!1;if(-1==a.indexOf("@")||-1==a.indexOf("."))return $("#email").addClass("reqfld"),$('<span class="error" style="display:none;">Invalid Email Address!</span>').insertBefore("#email").fadeIn(400),$("#email").focus(function(){$("#email").removeClass("reqfld"),$(this).prev().fadeOut(400)}),!1;var r=$("#datetimepicker").val();if(""==r)return $("#datetimepicker").addClass("reqfld"),$('<span class="error" style="display:none;">Required!</span>').insertBefore("#datetimepicker").fadeIn(400),$("#datetimepicker").focus(function(){$("#datetimepicker").removeClass("reqfld"),$(this).prev().fadeOut(400)}),!1;var i=$("#comment").val();if(""==i)return $("#comment").addClass("reqfld"),$('<span class="error" style="display:none;">Required!</span>').insertBefore("#comment").fadeIn(400),$("#comment").focus(function(){$("#comment").removeClass("reqfld"),$(this).prev().fadeOut(400)}),!1;$("#contact_form").animate({opacity:"0.3"},500);var l=$("#security").val(),o="name="+e+"&email="+a+"&phone="+s+"&datetimepicker="+r+"&comment="+i+"&security="+l;return $.ajax({type:"POST",url:"form/contact.php",data:o,success:function(){$("#contact_form").animate({opacity:"1"},500),$(".loader").hide(),$("<div id='success' class='alert alert-success' style='border:#"+successBox_Border_Color+" 1px "+successBoxBorderStyle+"; background:#"+successBoxColor+";' ></div>").insertAfter("#contact_form"),$("#contact_form").slideUp(300),$("#success").html("<h5 style='color:#"+textColor+";'>"+submitMessage+"</h5><p style='color:#"+textColor+";'>"+successParagraph+"</p>").hide().delay(300).fadeIn(1500)}}),!1})});
